<div class="col-md-6.col-md-offset-3">
  <div class="panel.panel-default">
    <div class="panel-footer">
      <div class="row">
        <div class="col-md-6">
          <div class="btn-group.pull-right">
            <% if @comments.blank? %>
            	<h3>No Reviews just yet, would you like to add first!</h3>
            <% else %>
            	<% @comments.each do |comment| %>
            	  <div class="comments">
            	  	<p> <%= comment.content %></p>
                  <p> By <%= comment.user.email %> </p>
                  <% if user_signed_in? &&current_user.id == @pic.user_id %>
                    <%= link_to "Delete Comment", [comment.pic, comment] , method: :delete,class: "btn btn-danger" %>
                  <% end %>
            	  </div>
            	<% end %>
            	<% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>